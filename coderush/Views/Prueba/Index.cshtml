@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@using coderush.Models
@model IEnumerable<coderush.Models.Root >
@{
    ViewData["Title"] = "Departameto";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title text-primary"><i class="fa fa-gear"></i> @ViewData["Title"]</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                            title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="box-body">

                <h2>Obtener por Id <a asp-action="Index" class="btn btn-sm btn-primary">Atras</a></h2>

                <a asp-action="AddReservation" class="btn btn-sm btn-primary">Add Prueba</a>
                <a asp-action="GetReservation" class="btn btn-sm btn-secondary">Get Prueba</a>

                <h3>@ViewBag.StatusCode</h3>
                <form method="post">
                    <div class="form-group">
                        <label for="id">Id:</label>
                        <input class="form-control" name="id" />
                    </div>
                    <div class="text-center panel-body">
                        <button type="submit" class="btn btn-sm btn-primary">Get Prueba</button>
                    </div>
                </form>

                @if (Model != null)
                {
                    <h2>Reservation</h2>
                    <table class="table table-sm table-striped table-bordered m-2">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Simbolo</th>
                                <th>Nombre</th>
                                <th>Plataforma</th>
                                <th>End Location</th>
                                <th>Update</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        
                        <tbody>
                            @foreach (var r in Model)
                            {
                                <tr>
                                    <td>@r.id</td>
                                    <td>@r.symbol</td>
                                    <td>@r.name</td>
                                    <td>@r.platforms</td>
                                    <td>
                                        <a asp-action="UpdateReservation" asp-route-id="@r.id">
                                            <img src="/icon/edit.png" />
                                        </a>
                                    </td>
                                    <td>
                                        <form asp-action="DeleteReservation" method="post">
                                            <input type="hidden" value="@r.id" name="ReservationId" />
                                            <input type="image" src="/icon/close.png" />
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                }


            </div>
            <!-- /.box-body -->
            <div class="box-footer">

            </div>
            <!-- /.box-footer-->
        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
@section Styles{
}
@section Scripts{


   
}